@{
    ViewData["Title"] = "Reports";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">@ViewData["Title"]</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-info">
                <div class="panel-heading">
                    Generate reports
                </div>

                <div class="panel-body">
                    <div class="col-sm-7">
                        <div class="form-group">
                            <label>Select report type</label>
                            <select class="form-control" id="reportType">
                                <option value="BI">Books Inventory</option>
                                <option value="AB">Active Borrowing</option>
                                <option value="OB">Overdue Books</option>
                            </select>
                            <p class="help-block">All reports will be downloaded in spreadsheet format.</p>
                        </div>
                        
                        <button type="button" class="btn btn-danger btn-block" onclick="onClickGenerate()"><i class="fa fa-file-excel-o fa-fw"></i> Generate report</button>
                        <br />
                    </div>
                    
                </div>

            </div>
        </div>
    </div>
</div>


