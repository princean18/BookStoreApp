    $(document).ready(function() {
        $('#dataTableBooks').dataTable( {
            dataType: 'json',
            ajax: {
                url: '/BooksModels/Details',
                dataType: 'json',
                contentType: "application/json",
                dataSrc: function(res) {
                    console.log(res);
                    return res;
