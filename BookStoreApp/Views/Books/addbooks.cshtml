@{
    ViewData["Title"] = "Add Books";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Add book</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Enter details of book
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <form method="post" asp-controller="books" asp-action="create">
                                <div class="form-group">
                                    <label>Title</label>
                                    <input class="form-control" placeholder="Enter book title" name="title" value="titles">
                                    @* <p class="help-block">Example block-level help text here.</p> *@
                                </div>

                                <div class="form-group">
                                    <label>Author</label>
                                    <input class="form-control" placeholder="Enter author name" name="authorName" value="authrs">
                                </div>

                                <div class="form-group">
                                    <label>Genre</label>
                                    <input class="form-control" placeholder="Enter genre" name="genre" value="genre">
                                </div>

                                <div class="form-group">
                                    <label>ISBN</label>
                                    <input class="form-control" placeholder="Enter ISBN" name="isbn" value="ISDBBNN">
                                </div>

                                <div class="form-group">
                                    <label>Available copies</label>
                                    <input type="number" min="0" class="form-control" name="availableCopies" placeholder="Enter the number of available copies" value="14">
                                </div>

                                <button type="submit" class="btn btn-primary">Submit</button>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>